extends ../../layouts/default.pug

block main
  div(class='mt-5')
    .d-flex.justify-content-center.align-items-start.min-vh-100.pt-5.bg-light
      .col-md-5.mt-5
        .card.shadow-lg.border-0
          .card-header.bg-primary.text-white.text-center
            h4.mb-0 Đăng nhập
          .card-body.p-4
            form(action="/user/change-password/active" method="POST")
              .form-group
                label(for="email") email
                input#email.form-control.rounded-pill(type="email" name="email"  value=email required)
              .form-group
                label(for="password") Nhập mật khẩu mới
                input#password.form-control.rounded-pill(type="password" name="password"  required)
              .form-group
                label(for="passwordCheck") Nhập lại mật khẩu mới
                input#passwordCheck.form-control.rounded-pill(type="password" name="passwordCheck"  required)
              button.btn.btn-primary.btn-block.rounded-pill.mt-3(type="submit") Xác Nhận
            .text-center.mt-5
              a(href="/user/login" class="text-primary font-weight-bold") Đăng nhập